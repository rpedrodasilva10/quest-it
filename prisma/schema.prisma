// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Parent {
  id        Int      @id @default(autoincrement())
  name      String
  lastName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nickname  String?
  email     String
  children  Child[]

  Quest Quest[]
  @@map("parents")
}

model Child {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  lastName  String
  nickname  String?
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parent    Parent?  @relation(fields: [parentId], references: [id])
  parentId  Int?

  @@map("children")
}

model Quest {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  stars       Int
  startedAt   DateTime?
  finishedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  parentId    Int

  @@map("quests")
  Parent Parent @relation(fields: [parentId], references: [id])
}
